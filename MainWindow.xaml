<Window x:Class="Waste_Management_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Username TextBox with placeholder functionality -->
            <TextBox Name="usernameBox" Text="Username" Margin="0,5" Foreground="Gray" GotFocus="Username_GotFocus" LostFocus="Username_LostFocus"/>

            <!-- Password TextBox with placeholder functionality -->
            <PasswordBox Name="passwordBox" Foreground="Gray" GotFocus="Password_GotFocus" LostFocus="Password_LostFocus" Margin="0,5"/>

            <Button Content="Login" Click="Login_Click" Background="#4CAF50" Foreground="White" Margin="0,10"/>
            <Button Content="Register" Click="OpenRegisterPage" Background="#2196F3" Foreground="White"/>

            <TextBlock Name="statusText" Foreground="Red" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
