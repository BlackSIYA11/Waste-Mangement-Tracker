<Window x:Class="Waste_Management_Tracker.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="800">
    <Grid Background="#F0F0F0">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- Username Box -->
            <TextBox Name="usernameBox" Margin="0,5" Foreground="#D3D3D3" Text="Username"
                     GotFocus="UsernameBox_GotFocus" LostFocus="UsernameBox_LostFocus"/>

            <!-- Email Box -->
            <TextBox Name="emailBox" Margin="0,5" Foreground="#D3D3D3" Text="Email"
                     GotFocus="EmailBox_GotFocus" LostFocus="EmailBox_LostFocus"/>

            <!-- Password Box -->
            <PasswordBox Name="passwordBox" Margin="0,5" Foreground="#D3D3D3" 
                         Password="Password" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>

            <Button Content="Register" Click="Register_Click" Background="#4CAF50" Foreground="White" Margin="0,10"/>
            <Button Content="Back to Login" Click="BackToLogin" Background="#9E9E9E" Foreground="White"/>

            <TextBlock Name="statusText" Foreground="Red" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
